<layout version="0.1.0">
	<default>
		<reference name="after_body_start">
			<block type="googletagmanager/gtm" name="google_tag_manager" as="google_tag_manager" template="googletagmanager/gtm.phtml" />
		</reference>
	</default>
    <catalog_category_layered>
        <reference name="head">
            <block type="cms/block" name="category_dataLayer">
                <action method="setBlockId"><block_id>category_datalayer</block_id></action>
            </block>
        </reference>
    </catalog_category_layered>
    <catalog_product_view>
        <reference name="head">
            <block type="cms/block" name="pdp_dataLayer">
                <action method="setBlockId"><block_id>pdp_datalayer</block_id></action>
            </block>
        </reference>
    </catalog_product_view>
    <checkout_cart_index>
        <reference name="head">
            <block type="cms/block" name="category_dataLayer">
                <action method="setBlockId"><block_id>cart_datalayer</block_id></action>
            </block>
        </reference>
    </checkout_cart_index>
    <checkout_onepage_index>
        <reference name="head">
            <block type="cms/block" name="checkout_dataLayer">
                <action method="setBlockId">
                    <block_id>checkout_datalayer</block_id>
                </action>
            </block>
        </reference>
    </checkout_onepage_index>
</layout>
